<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sensor_manage_item_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/corners_bg_white"
    android:gravity="end"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/sensor_manage_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:layout_weight="8"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="#706e6e"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/sensor_manage_item_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_weight="2"
        android:background="@drawable/corners_bg_blue"
        android:text="@string/sensor_manage_item_delete"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="30sp" />
</LinearLayout>