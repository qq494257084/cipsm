<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/system_ft"
        android:name="com.tiens.cipsm.fragment.SystemIndexFragment_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/system_menu" />
    <LinearLayout
        android:id="@+id/system_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/system_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/index_on"
            android:text="@string/system_index"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/system_park"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/park_on"
            android:text="@string/system_park"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/system_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/mine_on"
            android:text="@string/system_mine"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="22sp" />
    </LinearLayout>
</RelativeLayout>