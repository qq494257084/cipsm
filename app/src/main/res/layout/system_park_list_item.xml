<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="#e4e3e3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/system_park_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ad0004ff"
        android:text="12321321"
        android:textColor="#000000"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/system_park_list_bt_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#6e9e9595"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/system_park_list_master"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_gray"
            android:text="@string/system_park_list_master"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/system_park_list_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_gray"
            android:text="@string/system_park_list_edit"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/system_park_list_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_gray"
            android:text="@string/system_park_list_delete"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>